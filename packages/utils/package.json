{
  "name": "@aipt/utils",
  "version": "0.0.1",
  "description": "Utility functions package",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "scripts"
  ],
  "bin": {
    "gen": "./bin/gen.cjs"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json && bun run build:esm && bun run build:cjs",
    "build:esm": "bun build ./src/index.ts --format esm --target node --minify --external @aipt/* --outfile ./dist/index.mjs",
    "build:cjs": "bun build ./src/index.ts --format cjs --target node --minify --external @aipt/* --outfile ./dist/index.cjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "localforage": "^1.10.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
