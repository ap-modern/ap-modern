{
  "name": "@aipt/tailwind",
  "version": "0.0.1",
  "description": "Tailwind CSS theme generator from variables.json",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "theme"
  ],
  "bin": {
    "tailwind-theme": "./bin/tailwind-theme.cjs"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json && bun run build:esm && bun run build:cjs",
    "build:esm": "bun build ./src/index.ts --format esm --target node --minify --external @aipt/* --outfile ./dist/index.mjs",
    "build:cjs": "bun build ./src/index.ts --format cjs --target node --minify --external @aipt/* --outfile ./dist/index.cjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "tinycolor2": "^1.4.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/tinycolor2": "^1.4.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
